<Alloy>
	<NavigationWindow>
		<Window id="addWin" tabBarHidden="true">

			<LeftNavButton>
				<Button onClick="close" id="cancelButton"></Button>
			</LeftNavButton>
			<RightNavButton>
				<Button onClick="saveReport" id="saveButton"></Button>
			</RightNavButton>

			<ScrollView id="addWrap" layout="vertical">
				<View id="photoGallery" />
				<TextArea id="inputContent">
					<KeyboardToolbar>
		                <Toolbar>
		                    <Items>
		                        <FlexSpace/>
		                        <Button onClick="showCamera" id="cameraButton"/>
		                        <FlexSpace/>
		                        <FlexSpace/>
		                        <Button onClick="addPhotoPicker" id="photoButton"/>
		                        <FlexSpace/>
		                    </Items>
		                </Toolbar>
		            </KeyboardToolbar>
				</TextArea>
			</ScrollView>
			
		</Window>

	</NavigationWindow>
</Alloy>